@Html.BkndHeader(new[] { "System", "Permission", "Admin Roles" }, "cog", addBtnText: "Role", addBtnUrl: Url.Action("Create"))

@using (Html.BkndBeginList())
{
    @Html.BkndToolBar(new[] { "Delete" })

    <table class="table table-bordered table-striped dataTable" data-main-table="true"
           data-sort-column="Name" data-sort-type="asc">
        <thead>
            <tr>
                @Html.BkndThSearchIdColumn()
                @Html.BkndThSearchTextbox("Name")
                @Html.BkndThSearchBlankColumn()
                @Html.BkndThSearchBlankColumn()
            </tr>
            <tr>
                @Html.BkndThHeaderCheckbox()
                @Html.BkndThHeader("Name", sort: "Name")
                @Html.BkndThHeader("Users", width: 80, center: true)
                @Html.BkndThHeaderActionColumn()
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <script id="tplData" type="text/x-handlebars-template">
        {{#Data}}
        <tr>
            @Html.BkndTdCheckboxId()
            @Html.BkndTd("Name")
            @Html.BkndTd("UsersCount", center: true)
            @Html.BkndTdAction(Url.Action("Edit"))
        </tr>
        {{else}}
        @Html.BkndTrNoRecords()
        {{/Data}}
    </script>
}


    